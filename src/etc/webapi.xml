<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/shopgate/get_settings" method="POST"><!-- Add rest/V1/... -->
        <service class="Shopgate\Base\Api\SettingsInterface" method="getSettings"/>
        <resources>
            <!-- The token user must be able to access catalog:products -->
            <resource ref="Magento_Catalog::products" />
            <!-- NB! Anonymous is for testing purposes, allows anyone to make this call! -->
            <!--<resource ref="anonymous"/>-->
        </resources>
    </route>
</routes>
